<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
  <moduleName>Devious Devices: Expansion 1.2</moduleName>
  <moduleImage path="fomod\images\header.jpg"/>
  <installSteps order="Explicit">
    <installStep name="Body Type">
      <optionalFileGroups>
        <group name="Which body type do you use?" type="SelectExactlyOne">
          <plugins order="Explicit">
            <plugin name="CBBE">
              <description>
                Install CBBE version (based on CBBE 3.2.3 curvy)
              </description>
              <image path="fomod\images\01_cbbe.png"/>
              <files>
                <folder source="00 Core" destination=""/>
                <folder source="01 CBBE" destination=""/>
              </files>
              <conditionFlags>
                <flag name="CBBE">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="UNPB">
              <description>
                Install UNPB version (based on UNPB 2.5.2)
              </description>
              <image path="fomod\images\01_unpb.png"/>
              <files>
                <folder source="00 Core" destination=""/>
                <folder source="01 UNPB" destination=""/>
              </files>
              <conditionFlags>
                <flag name="UNPB">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
  	      </plugins>
        </group>
      </optionalFileGroups>
    </installStep>
  </installSteps>
</config>
